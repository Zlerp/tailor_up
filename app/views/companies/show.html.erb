<h1>Company Show Page</h1>

<h3>Company:</h3>
<%= @company.name %>

<hr>
<h2>Tailors</h2>
<ul class='compTailList'>
  <% @company.tailors.each do |tailor| %>
    <li> <%= link_to tailor.first_name, companies_tailor_path(tailor) %></li>
    <li> <%= tailor.phone %></li>
    <li> <%= tailor.email%></li>
    <td><%= link_to 'New Availability', new_tailor_availability_path(tailor) %></td>
    <td><%= link_to 'Destroy', tailor, method: :destroy, data: { confirm: 'Are you sure you want to delete this Tailor?' } %></td>

    <br>
<% end %>

</ul>

<h3>New Tailor</h3>


<%= link_to 'New Tailors', new_tailor_path %>
