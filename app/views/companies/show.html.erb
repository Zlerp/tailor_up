<div class="layer"></div>
<div class="tDashBack"></div>
<div class="darkBar"></div>
<div class="profItems">
  <div id="profNameCom">
    <p>
        CAVEAT
    </p>
  </div>
</div>
<!-- <h4>Tailors</h4> -->


<div class="dataLogSendC">
  <%= button_to "Logs", action: "dataLog"  %>
</div>
<div class="addTailor">
  <%= link_to content_tag(:i, nil, :class => "fa fa-plus-square fa-3x"), new_tailor_path %>
</div>


<div class="btnWrapper">
  <button id="showA" class="btnSelect btnZ">APPOINTMENTS</button>
  <button id="showT" class="btnSelect btnZ">TAILORS</button>
  <button id="showC" class="btnSelect btnZ">COMPLETED</button>
</div>
<table id="tableT" class="tableDash centered bordered">
  <thead>
    <tr>
      <th>TAILORS</th>
      <th>PHONE</th>
      <th>EMAIL</th>
      <th>APPOINTMENTS</th>
      <th>EDIT</th>
    </tr>
  </thead>
<tbody>
    <% @company.tailors.each do |tailor| %>
      <div class="tailAvailAptsZ">
        <tr class='compTailList'>
          <td> <%= link_to tailor.first_name, companies_tailor_path(@tailor) %></td>
          <!-- <td><%# link_to tailor.phone, :value => "#{tailor.phone}" %></td> -->
          <td> <%= tailor.phone%></td>
          <td> <%= tailor.email%></td>
          <td> <%= tailor.appointments.count %></td>
          <td>
            <%= link_to 'Availability', new_tailor_availability_path(tailor) %> |
             <%= link_to 'Destroy', tailor, method: :destroy, data: { confirm: 'Are you sure you want to delete this Tailor?' } %>
          </td>
        </tr>
      </div>
    <% end %>
  </tbody>
</table>
<table id="tableA" class="tableDash centered bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>USER</th>
      <th>ADDRESS</th>
      <th>TIME</th>
      <th>PHONE</th>
      <th>ITEMS</th>
      <th>STATUS</th>
      <th><th>
    </tr>
  </thead>
<tbody>
    <% @company.tailors.each do |tailor| %>
      <div class="tailAvailAptsZ">
        <% tailor.appointments.each do |a| %>
          <% if a.stages != "Order Complete" %>
            <tr>
              <td><%= a.id + 10000 %> </td>
              <td><%= a.user.first_name %> </td>
              <td><%= a.address %> </td>
              <td>
                <%# a.appointment_time.strftime("%b %e") %>
              <br>
                <%# a.appointment_time.strftime("%l:%M %p") %>
              </td>
              <!-- <td><%# link_to a.user.phone, :value => "#{a.user.phone}" %></td> -->
              <td><%= a.user.phone %></td>
              <td><%= a.articles.count %></td>
              <td><%= a.stages%> </td>
                <%if a.stages == "Order Complete" %>
                <%else %>
                  <td class="dataLogSend emailzz"> <%= button_to "Update", a, action: "status", data: { confirm: "Are you sure you want to update the status of #{a.tailor.first_name}'s order?" } %></td>
                <%end%>
              <% else %>
              <% end %>
            <% end %>
          </tr>
      </div>
    <% end %>
  </tbody>
</table>
<table id="tableC" class="tableDash centered bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>USER</th>
      <th>ADDRESS</th>
      <th>TIME</th>
      <th>PHONE</th>
      <th>ITEMS</th>
      <th>STATUS</th>
      <th><th>
    </tr>
  </thead>
<tbody>
    <% @company.tailors.each do |tailor| %>
      <div class="tailAvailAptsZ">
        <% tailor.appointments.each do |a| %>
          <% if a.stages == "Order Complete" %>
            <tr>
              <td><%= a.id + 10000 %> </td>
              <td><%= a.user.first_name %> </td>
              <td><%= a.address %> </td>
              <td>
                <%# a.appointment_time.strftime("%b %e") %>
              <br>
                <%# a.appointment_time.strftime("%l:%M %p") %>
              </td>
              <!-- <td><%# link_to a.user.phone, :value => "#{a.user.phone}" %></td> -->
              <td><%= a.user.phone %></td>
              <td><%= a.articles.count %></td>
              <td><%= a.stages%> </td>
            <% end %>
            <% end %>
          </tr>
      </div>
    <% end %>
  </tbody>
</table>
