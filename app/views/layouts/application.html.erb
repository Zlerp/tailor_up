
<head>
  <script src="/pace/pace.js"></script>
  <link href="/pace/themes/pace-theme-barber-shop.css" rel="stylesheet" />
</head>

<!DOCTYPE html>
<html>
<head>
  <title>TailorUp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.0/css/materialize.min.css">
</head>
<body>
<div class="applicationContainer">

<%= yield %>

<% if current_tailor %>
<div class="taiLog">
  <%= link_to 'Tailor Home', tailors_dashboard_path %>  |
  <%= link_to 'Tailor Logout', logout_tailor_path, method:"delete"%>
</div>
<% else %>
<div class="taiLog">
  <%= link_to 'Tailor Login', new_session_tailor_path%>
</div>
<% end %>
<% if current_company %>
<div id="comLog">
    <%= link_to 'Company Home', companies_path %>  |
    <%= link_to 'Company Logout', logout_company_path, method:"delete"%>
</div>
<% else %>
<div id="comLog">
  <%= link_to 'Company Login', new_company_path%>
</div>
<% end %>
</div>


</body>
</html>
