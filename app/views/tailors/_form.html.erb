<%= simple_form_for @tailors do |f| %>
  <%=f.file_field :image %>
  <%= f.input :first_name, :placeholder => "First name" %>
  <%= f.input :last_name, :placeholder => "Last name"%>
  <%= f.input :email, :placeholder => "Email" %>
  <%= f.input :phone, :placeholder => "Phone number" %>
  <%= f.input :location, :placeholder => "Location"  %>
  <%= f.input :password, :placeholder => "Password" %>
  <%= f.input :password_confirmation, :placeholder => "Password confirmation" %>
  <%= f.button :submit %>
<% end %>
