
<div class="layer"></div>
<div id="loginBackground"></div>
<div class="context">

<h1>tailor's</h1>
<%=form_tag sessions_login_tailor_path do %>
<p>
  <%# label_tag :email %>
  <%= text_field_tag :email, nil, :placeholder => 'example@TailorUp.com' %>
</p>
<p>
  <%# label_tag :password %>
  <%= password_field_tag :password, nil, :placeholder => 'password' %>
</p>
<p id="submitLogin">
  <%= submit_tag 'Log in' %>
</p>

<% end %>
</div>
