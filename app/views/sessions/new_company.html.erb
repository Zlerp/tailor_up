
<div class="layer"></div>
<div id="loginBackground"></div>
<div class="context">
  <h1>company</h1>
  <%=form_tag sessions_login_company_path do %>
    <p>
      <%= text_field_tag :email, nil, :placeholder => 'example@TailorUp.com' %>
    </p>
    <p>
      <%= password_field_tag :password, nil, :placeholder => 'password'  %>
    </p>
    <p id="submitLogin">
      <%= submit_tag 'Log in' %>
    </p>
    <div class="signUpLinks">
      <%= link_to 'Sign Up', new_companies_path%>
    </div>
  <% end %>
</div>
